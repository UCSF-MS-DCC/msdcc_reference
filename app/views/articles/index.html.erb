<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Articles</h1>
    </div>
    <div class="bottom-align-text col-md-6">
      <% if current_user && current_user.has_role?(:contributor) %>
        <%= link_to 'New Article', new_article_path, :class => "btn btn-new-article btn-sm pull-right" %>
      <% end %>
    </div>
  </div>
  <br>
  <hr>
  <table>
    <thead>
      <tr>
        <th class="col-md-3"><h3>Term</h3></th>
        <th class="col-md-6"><h3>Definition</h3></th>
        <th class="col-md-3"><h3>Author</h3></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td class="col-md-3"><h4><%= link_to article.term, article %></h4></td>
          <td class="col-md-6"><h4><%= article.definition %></h4></td>
          <td class="col-md-3"><h4><%= article.user.email %></h4></td>
          <!-- <% if current_user && current_user.has_role?(:contributor) %>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
